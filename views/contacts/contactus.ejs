<% layout("./layouts/boilerplate.ejs") -%>
<body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Write Us</h3>
        <form method="POST" action="/contactus" class="needs-validation" novalidate>
          <div class="mt-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" id="name" class="form-control" placeholder="Enter name" minlength="4" type="text" required/>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a name</div>
          </div>
          <div class="mt-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" id="email" class="form-control" placeholder="Enter email" type="email" required/>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a email</div>
          </div>
          <div class="mt-3">
            <label for="message" class="form-label">Message</label>
            <textarea name="message" id="message" class="form-control" placeholder="Enter message hare" minlength="25" maxlength="500" type="text" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a minmum 25 charactors in message</div>
          </div>
        <button class="btn btn-dark mt-5 add-btn nextBtn btn-outline-info">Send</button>
        </form>
      </div>
    </div>
  </body>