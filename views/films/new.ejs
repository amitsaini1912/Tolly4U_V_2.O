<%- layout("./layouts/boilerplate.ejs") %>

  <style>
    hr {
      color: #ff0011;
      margin-bottom: 60px;
    }
  </style>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h1 style="text-align: center;">Add new film</h1>
        <form method="POST" action="/new" class="needs-validation" novalidate>
          <div class="mt-3">
            <label for="film-url" class="form-label">URL</label>
            <input name="film[url]" id="film-url" class="form-control" placeholder="Add url" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a url</div>
          </div>
          <div class="mt-3">
            <label for="film-title" class="form-label">Title</label>
            <input name="film[title]" id="film-title" class="form-control" placeholder="Add Title" type="text"
              required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a title</div>
          </div>
          <div class="mt-3">
            <label for="film-description" class="form-label">Description</label>
            <textarea name="film[description]" rows="5" id="film-description" class="form-control"
              placeholder="Add description" type="text" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a description</div>
          </div>
          <div class="mt-3">
            <label for="film-originalTitle" class="form-label">Original Title</label>
            <input name="film[originalTitle]" id="film-originalTitle" class="form-control"
              placeholder="Add Original Title" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide Original Title</div>
          </div>
          <div class="mt-3">
            <label for="film-story" class="form-label">Story</label>
            <textarea name="film[story]" rows="3" id="film-story" class="form-control" placeholder="Add story"
              type="text" required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a story</div>
          </div>

          <div class="row">
            <div class="mt-3 col-md-4">
              <label for="film-genre" class="form-label">Genre</label>
              <input name="film[genre]" id="film-genre" class="form-control" placeholder="Hollywood, Comedy, Action"
                type="text" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide genre</div>
            </div>
            <div class="mt-3 col-md-4">
              <label for="film-category" class="form-label">Category</label>
              <select name="film[category]" id="film-category" class="form-control">
                <option value="Bollywood">Bollywood</option>
                <option value="Hollywood">Hollywood</option>
                <option value="Web Series">Web Series</option>
                <option value="Web Series">Adult</option>
              </select>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please Select a category</div>
            </div>
            <div class="mt-3 col-md-4">
              <label for="film-categoryType" class="form-label">Category Type</label>
              <select name="film[categoryType]" id="film-categoryType" class="form-control">
                <option value="Comedy">Comedy</option>
                <option value="Action">Action</option>
                <option value="Horror">Horror</option>
                <option value="Romance">Romance</option>
              </select>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please Select a category Type</div>
            </div>
          </div>

          <div class="row">
            <div class="mt-3 col-md-6">
              <label for="film-casts" class="form-label">Casts</label>
              <input name="film[casts]" id="film-casts" class="form-control" placeholder="Shardha, Rajat" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a name</div>
            </div>
            <div class="mt-3 col-md-6">
              <label for="film-directors" class="form-label">Directors</label>
              <input name="film[directors]" id="film-directors" class="form-control" placeholder="Aman, Rajesh"
                required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a name</div>
            </div>
          </div>

          <div class="row">
            <div class="mt-3 col-md-6">
              <label for="film-runtime" class="form-label">Runtime</label>
              <input name="film[runtime]" id="film-runtime" class="form-control" placeholder="120 min" type="text"
                required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide Time</div>
            </div>
            <div class="mt-3 col-md-6">
              <label for="film-releaseDate" class="form-label">Release Date</label>
              <input name="film[releaseDate]" id="film-releaseDate" class="form-control" placeholder="11 Dec 2023"
                type="text" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide Release Date</div>
            </div>
          </div>

          <!-- Poster     -->
          <hr>
          <div class="mt-3">
            <label for="film-filmPoster" class="form-label">Film Poster</label>
            <input name="film[filmPoster]" id="film-filmPoster" class="form-control" placeholder="Enter image URL/Link"
              type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide Film Poster</div>
          </div>

          <!-- Video Source     -->
          <hr>
          <div class="mt-3">
            <label for="film-videoSrc" class="form-label">Video Src</label>
            <input name="film[videoSrc]" id="film-videoSrc" class="form-control" placeholder="Enter video Src URL/Link"
              type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide Video Src </div>
          </div>

          <!-- Screenshoots -->
          <hr>
          <h2>Film Snaps</h2>
          <div class="mt-3">
            <label for="film-screenshoot1" class="form-label">screenshoot1</label>
            <input name="film[screenshoots][0]" id="film-screenshoot1" class="form-control"
              placeholder="Enter image URL/Link" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide screenshoot1</div>
          </div>
          <div class="mt-3">
            <label for="film-screenshoot2" class="form-label">screenshoot2</label>
            <input name="film[screenshoots][1]" id="film-screenshoot2" class="form-control"
              placeholder="Enter image URL/Link" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide screenshoot2</div>
          </div>
          <div class="mt-3">
            <label for="film-screenshoot3" class="form-label">screenshoot3</label>
            <input name="film[screenshoots][2]" id="film-screenshoot3" class="form-control"
              placeholder="Enter image URL/Link" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide screenshoot3</div>
          </div>
          <div class="mt-3">
            <label for="film-screenshoot4" class="form-label">screenshoot4</label>
            <input name="film[screenshoots][3]" id="film-screenshoot4" class="form-control"
              placeholder="Enter image URL/Link" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide screenshoot4</div>
          </div>
          <div class="mt-3">
            <label for="film-screenshoot5" class="form-label">screenshoot5</label>
            <input name="film[screenshoots][4]" id="film-screenshoot5" class="form-control"
              placeholder="Enter image URL/Link" type="text" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide screenshoot5</div>
          </div>

          <!-- Video Download Links       -->
          <!-- 1080P download links -->
          <hr>
          <h2>1080P Download Links</h2>
          <div class="mt-3">
            <label for="film-direct1080p" class="form-label">1080P Direct Link</label>
            <input name="film[links1080p][0]" id="film-direct1080p" class="form-control"
              placeholder="Enter video1080p URL/Link" type="text"/>
          </div>
          <div class="mt-3">
            <label for="film-GDrive1080p" class="form-label">GDrive1080p</label>
            <input name="film[links1080p][1]" id="film-GDrive1080p" class="form-control"
              placeholder="Enter GDrive1080p URL/Link" type="text" />
          </div>
          <div class="mt-3">
            <label for="film-torrent1080p" class="form-label">torrent1080p</label>
            <input name="film[links1080p][2]" id="film-torrent1080p" class="form-control"
              placeholder="Enter torrent1080p URL/Link" type="text" />
          </div>
          <div class="mt-3">
            <label for="film-other1080p" class="form-label">other1080p</label>
            <input name="film[links1080p][3]" id="film-other1080p" class="form-control"
              placeholder="Enter other1080p URL/Link" type="text" />
          </div>

          <!-- 720p download links -->
          <hr>
          <h2>720P Download Links</h2>
          <div class="mt-3">
            <label for="film-direct720p" class="form-label">720P Direct Link</label>
            <input name="film[links720p][0]" id="film-direct720p" class="form-control"
              placeholder="Enter video720p URL/Link" type="text"/>
          </div>
          <div class="mt-3">
            <label for="film-GDrive720p" class="form-label">GDrive720p</label>
            <input name="film[links720p][1]" id="film-GDrive720p" class="form-control"
              placeholder="Enter GDrive720p URL/Link" type="text" />
          </div>
          <div class="mt-3">
            <label for="film-torrent720p" class="form-label">torrent720p</label>
            <input name="film[links720p][2]" id="film-torrent720p" class="form-control"
              placeholder="Enter torrent720p URL/Link" type="text" />
          </div>
          <div class="mt-3">
            <label for="film-other720p" class="form-label">other720p</label>
            <input name="film[links720p][3]" id="film-other720p" class="form-control"
              placeholder="Enter other720p URL/Link" type="text" />
          </div>

          <!-- 480p download links -->
          <hr>
          <h2>480P Download Links</h2>
          <div class="mt-3">
            <label for="film-direct480p" class="form-label">480P Direct Link</label>
            <input name="film[links480p][0]" id="film-direct480p" class="form-control"
              placeholder="Enter video480p URL/Link" type="text"/>
          </div>
          <div class="mt-3">
            <label for="film-GDrive480p" class="form-label">GDrive480p</label>
            <input name="film[links480p][1]" id="film-GDrive480p" class="form-control"
              placeholder="Enter GDrive480p URL/Link" type="text" />
          </div>
          <div class="mt-3">
            <label for="film-torrent480p" class="form-label">torrent480p</label>
            <input name="film[links480p][2]" id="film-torrent480p" class="form-control"
              placeholder="Enter torrent480p URL/Link" type="text" />
          </div>
          <div class="mt-3">
            <label for="film-other480p" class="form-label">other480p</label>
            <input name="film[links480p][3]" id="film-other480p" class="form-control"
              placeholder="Enter other480p URL/Link" type="text" />
          </div>


          <!-- Download File Sizes --> <hr>
           <h2>Download File Sizes</h2>
          <div class="row">
            <div class="mt-3 col-md-4">
              <label for="film-fileSizes[0]" class="form-label">1080P file size</label>
              <input name="film[fileSizes][0]" id="film-fileSizes[0]" class="form-control" type="text"/>
            </div>
            <div class="mt-3 col-md-4">
              <label for="film-fileSizes[1]" class="form-label">720P file size</label>
              <input name="film[fileSizes][1]" id="film-fileSizes[1]" class="form-control" type="text" />
            </div>
            <div class="mt-3 col-md-4">
              <label for="film-fileSizes[2]" class="form-label">480P file size</label>
              <input name="film[fileSizes][2]" id="film-fileSizes[2]" class="form-control" type="text" />
            </div>
          </div>

          <!-- Episodes Download Links     --> <hr>
           <h2>Web Series Episodes Links</h2>
          <div class="mt-3">
            <label for="film-ep1" class="form-label">ep1</label>
            <input name="film[episodes][0]" id="film-ep1" class="form-control" />
          </div>
          <div class="mt-3">
            <label for="film-ep2" class="form-label">ep2</label>
            <input name="film[episodes][1]" id="film-ep2" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep3" class="form-label">ep3</label>
            <input name="film[episodes][2]" id="film-ep3" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep4" class="form-label">ep4</label>
            <input name="film[episodes][3]" id="film-ep4" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep5" class="form-label">ep5</label>
            <input name="film[episodes][4]" id="film-ep5" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep6" class="form-label">ep6</label>
            <input name="film[episodes][5]" id="film-ep6" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep7" class="form-label">ep7</label>
            <input name="film[episodes][6]" id="film-ep7" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep8" class="form-label">ep8</label>
            <input name="film[episodes][7]" id="film-ep8" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep9" class="form-label">ep9</label>
            <input name="film[episodes][8]" id="film-ep9" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep10" class="form-label">ep10</label>
            <input name="film[episodes][9]" id="film-ep10" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep11" class="form-label">ep11</label>
            <input name="film[episodes][10]" id="film-ep11" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep12" class="form-label">ep12</label>
            <input name="film[episodes][11]" id="film-ep12" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep13" class="form-label">ep13</label>
            <input name="film[episodes][12]" id="film-ep13" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep14" class="form-label">ep14</label>
            <input name="film[episodes][13]" id="film-ep14" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep15" class="form-label">ep15</label>
            <input name="film[episodes][14]" id="film-ep15" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep16" class="form-label">ep16</label>
            <input name="film[episodes][15]" id="film-ep16" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep17" class="form-label">ep17</label>
            <input name="film[episodes][16]" id="film-ep17" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep18" class="form-label">ep18</label>
            <input name="film[episodes][17]" id="film-ep18" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep19" class="form-label">ep19</label>
            <input name="film[episodes][18]" id="film-ep19" class="form-control"/>
          </div>
          <div class="mt-3">
            <label for="film-ep20" class="form-label">ep20</label>
            <input name="film[episodes][19]" id="film-ep20" class="form-control"/>
          </div>
          

          <button class="btn btn-dark mt-5 add-btn">Add</button>
        </form>
      </div>
    </div>
  </body>